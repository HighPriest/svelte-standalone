{
	"name": "svelte-standalone",
	"version": "2.3.1-beta",
	"description": "Transform Svelte components in standalone scripts!",
	"bin": {
		"standalone": "dist/cli/cli.js"
	},
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js"
		},
		"./css/": "./src/css/"
	},
	"files": [
		"dist",
		"src/plop-templates",
		"src/css"
	],
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/glob": "^8.1.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"prettier": "^3.1.1",
		"svelte": "^5.0.0",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.1",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@inquirer/prompts": "^7.2.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-strip": "^3.0.4",
		"@rollup/plugin-terser": "^0.4.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.0.6",
		"commander": "^12.1.0",
		"cssnano": "^7.0.6",
		"find-up": "^7.0.0",
		"glob": "^11.0.0",
		"node-plop": "^0.32.0",
		"rollup-plugin-visualizer": "^5.12.0",
		"vite-plugin-lib-inject-css": "^2.1.1"
	},
	"scripts": {
		"build": "tsc",
		"format": "prettier --write .",
		"lint": "prettier --write . && eslint ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brenoliradev/svelte-standalone.git"
	},
	"keywords": [
		"svelte",
		"scripts",
		"standalone",
		"tailwind",
		"typescript"
	],
	"author": "brenoliradev",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/brenoliradev/svelte-standalone/issues"
	},
	"homepage": "https://github.com/brenoliradev/svelte-standalone#readme",
	"type": "module"
}
