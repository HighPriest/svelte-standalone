{
	"name": "svelte-standalone",
	"version": "0.6.14-rc",
	"description": "Transform Svelte components in standalone scripts!",
	"bin": {
		"standalone": "dist/src/cli/cli.js"
	},
	"main": "dist/src/cli/cli.js",
	"exports": {
		".": {
			"import": "./dist/src/index.js"
		},
		"./css/": "./src/css/"
	},
	"files": [
		"dist",
		"src/plop-templates",
		"src/css"
	],
	"devDependencies": {
		"@tsconfig/svelte": "^5.0.4",
		"@types/eslint": "^8.56.0",
		"@types/glob": "^8.1.0",
		"@types/inquirer": "^9.0.7",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"postcss": "^8.4.49",
		"prettier": "^3.1.1",
		"svelte": "^4.2.7",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.1",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"commander": "^12.1.0",
		"cssnano": "^7.0.6",
		"find-up": "^7.0.0",
		"glob": "^11.0.0",
		"inquirer": "^12.1.0",
		"node-plop": "^0.32.0",
		"rollup-plugin-strip": "^1.2.2",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-visualizer": "^5.12.0",
		"tailwindcss": "^3.4.15",
		"vite-plugin-lib-inject-css": "^2.1.1"
	},
	"scripts": {
		"build": "tsc",
		"format": "prettier --write .",
		"lint": "prettier --write . && eslint ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brenoliradev/svelte-standalone.git"
	},
	"keywords": [
		"svelte",
		"scripts",
		"standalone",
		"tailwind",
		"typescript"
	],
	"author": "brenoliradev",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/brenoliradev/svelte-standalone/issues"
	},
	"homepage": "https://github.com/brenoliradev/svelte-standalone#readme"
}
