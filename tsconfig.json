{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
