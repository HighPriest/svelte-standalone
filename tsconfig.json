{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "lib"
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "dist"]
}
